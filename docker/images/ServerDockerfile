# Create a server image from itzg's existent one
FROM itzg/minecraft-server:java8

# Override default envs
ENV EULA="TRUE" ONLINE_MODE="FALSE" ENABLE_RCON="FALSE" \
    TYPE="CUSTOM" CUSTOM_SERVER="https://astfaster.blob.core.windows.net/hydra/spigot.jar" \
    MAX_PLAYERS="1000" INIT_MEMORY="512M" MAX_MEMORY="4G" \
    JVM_OPTS="-XX:+UseG1GC -XX:+ParallelRefProcEnabled -XX:MaxGCPauseMillis=200 -XX:+UnlockExperimentalVMOptions -XX:+DisableExplicitGC -XX:+AlwaysPreTouch -XX:G1HeapWastePercent=5 -XX:G1MixedGCCountTarget=4 -XX:G1MixedGCLiveThresholdPercent=90 -XX:G1RSetUpdatingPauseTimePercent=5 -XX:SurvivorRatio=32 -XX:+PerfDisableSharedMem -XX:MaxTenuringThreshold=1 -XX:G1NewSizePercent=30 -XX:G1MaxNewSizePercent=40 -XX:G1HeapRegionSize=8M -XX:G1ReservePercent=20 -XX:InitiatingHeapOccupancyPercent=15"

# Disable healthcheck
HEALTHCHECK NONE